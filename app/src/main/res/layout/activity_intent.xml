<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntentActivity">

    <Button
        android:id="@+id/explicitButton"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="98dp"
        android:text="Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginui" />

    <Button
        android:id="@+id/implicitButton"
        android:layout_width="222dp"
        android:layout_height="44dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="45dp"
        android:text="Continue with google"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explicitButton" />

    <ImageView
        android:id="@+id/loginui"
        android:layout_width="226dp"
        android:layout_height="228dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="184dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loginui" />

    <TextView
        android:id="@+id/title"
        android:layout_width="215dp"
        android:layout_height="91dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="36dp"
        android:fontFamily="cursive"
        android:text="Welcome"
        android:textColor="#E91E63"
        android:textSize="65sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>